<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:padding="20dp"
        android:background="@color/fondo"
>
    <ImageView
            android:id="@+id/imageLogin"
            android:layout_width="86dp"
            android:layout_height="91dp"
            android:src="@drawable/candado"
            app:layout_constraintTop_toBottomOf="@id/TextWelcome"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintHorizontal_bias="0.498"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enciclopedia de heroes"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/TextWelcome"

            android:layout_marginTop="40dp"/>
    <EditText
            android:id="@+id/editCorreo"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imageLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:hint="@string/correo"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.3"
            android:textColorHint="@color/white"

    >

    </EditText>
    <EditText
            android:id="@+id/editContra"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editCorreo"
            android:hint="@string/contrase_a"
            android:textColorHint="@color/white"
    >

    </EditText>

    <Button
            android:id="@+id/btnLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/editContra"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/login"
            app:layout_constraintVertical_bias="0.6"
            android:backgroundTint="@color/boton"
            android:textColor="@color/white"
    >

    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>